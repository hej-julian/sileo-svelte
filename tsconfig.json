{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"skipLibCheck": true,
		"isolatedModules": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
